<h1>Pithy quotes</h1>

<% @quotes.each do |quote| %>
  <section class="quote-container">
    <blockquote class="quote">
      <%= quote.text %>
      <footer class="author">
        <%= quote.author %>
      </footer>
    </blockquote>
    <div class="created">
      <% if quote.created_at === nil %>
        <% quote.created_at = Time.now %>
      <% end %>
      <%= time_ago_in_words(quote.created_at)%> ago
    </div>
  </section>
<% end %>
